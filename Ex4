using static System.Console;
internal class Program
{
    static void Main(string[] args)
    {
        const string exitCommand = "exit";
        const string sumCommand = "=";
        int[] valuesArray = new int[5];
        int currentEmptyValue = 0;
        bool isTyping = true;

        WriteLine($"Вводите целочисленные значения в консоль. \nКак закончите, введите команду \"{sumCommand}\", чтобы сложить их все.");

        while (isTyping)
        {
            if (currentEmptyValue >= valuesArray.Length)
                valuesArray = IncrementArraySize(valuesArray);

            Write($"Сейчас редактируется {currentEmptyValue + 1} число: ");
            string userCommand = ReadLine();

            if (userCommand == sumCommand)
            {
                int totalValue = 0;
                for (int i = 0; i < valuesArray.Length; i++)
                    totalValue += valuesArray[i];
                currentEmptyValue = 0;
                WriteLine($"Сумма всех введённых чисел составила: {totalValue}. \nНажмите, чтобы повторить цикл.");
                ReadLine();
                Clear();
                continue;
            }

            else if (int.TryParse(userCommand, out int value))
            {
                valuesArray[currentEmptyValue] = value;
                currentEmptyValue++;
            }

            else if (userCommand == exitCommand) { // Опишу этот формат записи в вопросе
                isTyping = false;
                WriteLine("Программа завершает свою работу.");
            }

            else {
                WriteLine("\nНеизвестная команда, или строка не является числом, попробуйте снова.");
            }
        }
    }

    static int[] IncrementArraySize(int[] arrayToResize)
    {
        int[] tempArray = new int[arrayToResize.Length + 1];

        for (int i = 0; i < arrayToResize.Length; i++)
            tempArray[i] = arrayToResize[i];

        tempArray[tempArray.Length - 1] = 0;
        return tempArray;
    }
}
